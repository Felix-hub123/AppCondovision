@model IEnumerable<CondoVision.Data.Entities.Company>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/AdminLTE/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AdminLTE/plugins/datatables-responsive/css/responsive.bootstrap4.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AdminLTE/plugins/datatables-buttons/css/buttons.bootstrap4.min.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/AdminLTE/plugins/datatables/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/datatables-responsive/js/dataTables.responsive.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/datatables-responsive/js/responsive.bootstrap4.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/datatables-buttons/js/dataTables.buttons.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/datatables-buttons/js/buttons.bootstrap4.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/jszip/jszip.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/pdfmake/pdfmake.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/pdfmake/vfs_fonts.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/datatables-buttons/js/buttons.html5.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/datatables-buttons/js/buttons.print.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/datatables-buttons/js/buttons.colVis.min.js" asp-append-version="true"></script>
    <script>
        $(function () {
            $("#companyTable").DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Portuguese.json"
                },
                "order": [[0, "asc"]]
            }).buttons().container().appendTo('#companyTable_wrapper .col-md-6:eq(0)');
        });
    </script>
}

@section ContentHeader {
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    </div>
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Lista de Empresas</h3>
                        <div class="card-tools">
                            @if (User.IsInRole("CompanyAdmin"))
                            {
                                <a asp-action="Create" class="btn btn-sm btn-success" title="Criar nova empresa">
                                    <i class="fas fa-plus"></i> Criar Nova Empresa
                                </a>
                            }
                        </div>
                    </div>
                    <div class="card-body p-0">
                        @if (Model == null || !Model.Any())
                        {
                            <div class="alert alert-warning text-center" role="alert">
                                Não há empresas cadastradas no momento.
                            </div>
                        }
                        else
                        {
                            <table id="companyTable" class="table table-striped table-hover" aria-describedby="companyTableDescription">
                                <caption id="companyTableDescription" class="sr-only">Tabela listando empresas com nome, NIF, data de criação, número de condomínios e ações disponíveis.</caption>
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                                        <th>@Html.DisplayNameFor(model => model.CompanyTaxId)</th>
                                        <th>@Html.DisplayNameFor(model => model.CreationDate)</th>
                                        <th>Condominios</th>
                                        <th class="text-right">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                            <td>@Html.DisplayFor(modelItem => item.CompanyTaxId)</td>
                                            <td>@item.CreationDate.ToString("dd/MM/yyyy")</td>
                                            <td>@item.Condominiums.Count()</td>
                                            <td class="text-right">
                                                @if (User.IsInRole("CompanyAdmin"))
                                                {
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Editar empresa">
                                                        <i class="fas fa-edit"></i> Editar
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar empresa">
                                                        <i class="fas fa-trash"></i> Eliminar
                                                    </a>
                                                }
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Ver detalhes da empresa">
                                                    <i class="fas fa-eye"></i> Detalhes
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

