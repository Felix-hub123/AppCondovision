<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CondoVision</title>
    <link rel="icon" href="~/favicon.png" type="image/png" />

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    
    <link rel="stylesheet" href="~/AdminLTE/plugins/fontawesome-free/css/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/AdminLTE/plugins/overlayScrollbars/css/OverlayScrollbars.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AdminLTE/dist/css/adminlte.min.css" asp-append-version="true" />
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CondoVision.Web.styles.css" asp-append-version="true" />
    
    <link rel="stylesheet" href="~/css/_CondoVisionTheme.css" asp-append-version="true" />
    
    @RenderSection("Styles", required: false)

</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a asp-controller="Home" asp-action="Painel" class="nav-link">Painel</a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a asp-controller="Home" asp-action="Privacy" class="nav-link">Privacidade</a>
            </li>
        </ul>

        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                    <i class="fas fa-search"></i>
                </a>
                <div class="navbar-search-block">
                    <form class="form-inline">
                        <div class="input-group input-group-sm">
                            <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                            <div class="input-group-append">
                                <button class="btn btn-navbar" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                                <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </li>

            <li class="nav-item dropdown">
                <a class="nav-link" data-toggle="dropdown" href="#">
                    <i class="far fa-comments"></i>
                    <span class="badge badge-danger navbar-badge">3</span>
                </a>
                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                    <span class="dropdown-item dropdown-header">3 Novas Mensagens</span>
                    <div class="dropdown-divider"></div>
                    <a href="#" class="dropdown-item">
                        <div class="media">
                            <img src="~/AdminLTE/dist/img/user1-128x128.jpg" alt="User Avatar" class="img-size-50 mr-3 img-circle">
                            <div class="media-body">
                                <h3 class="dropdown-item-title">Suporte CondoVision</h3>
                                <p class="text-sm">Nova mensagem sobre a quota mensal.</p>
                                <p class="text-sm text-muted"><i class="far fa-clock mr-1"></i> 1 Hora Atrás</p>
                            </div>
                        </div>
                    </a>
                    <div class="dropdown-divider"></div>
                    <a href="#" class="dropdown-item dropdown-footer">Ver Todas as Mensagens</a>
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link" data-toggle="dropdown" href="#">
                    <i class="far fa-bell"></i>
                    <span class="badge badge-warning navbar-badge">5</span>
                </a>
                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                    <span class="dropdown-item dropdown-header">5 Notificações</span>
                    <div class="dropdown-divider"></div>
                    <a href="#" class="dropdown-item">
                        <i class="fas fa-envelope mr-2"></i> 2 Novas Faturas
                        <span class="float-right text-muted text-sm">3 min</span>
                    </a>
                    <div class="dropdown-divider"></div>
                    <a href="#" class="dropdown-item">
                        <i class="fas fa-users mr-2"></i> 1 Novo Condómino
                        <span class="float-right text-muted text-sm">12 horas</span>
                    </a>
                    <div class="dropdown-divider"></div>
                    <a href="#" class="dropdown-item dropdown-footer">Ver Todas as Notificações</a>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                    <i class="fas fa-expand-arrows-alt"></i>
                </a>
            </li>
            <li class="nav-item">
                 @if (User.Identity!.IsAuthenticated)
                 {
                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">
                        <i class="fas fa-sign-out-alt"></i> Sair
                    </a>
                 }
                 else
                 {
                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </a>
                 }
            </li>
            <li class="nav-item">
                <a class="nav-link" data-widget="control-sidebar" data-controlsidebar-slide="true" href="#" role="button">
                    <i class="fas fa-th-large"></i>
                </a>
            </li>
        </ul>
    </nav>

    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a asp-controller="Home" asp-action="Painel" class="brand-link">
            <img src="~/AdminLTE/dist/img/AdminLTELogo.png" alt="CondoVision Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
            <span class="brand-text font-weight-light">CondoVision</span>
        </a>

        <div class="sidebar">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/AdminLTE/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@User.Identity.Name</a>
                    </div>
                </div>
            }

            <div class="form-inline">
                <div class="input-group" data-widget="sidebar-search">
                    <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                    <div class="input-group-append">
                        <button class="btn btn-sidebar">
                            <i class="fas fa-search fa-fw"></i>
                        </button>
                    </div>
                </div>
            </div>

            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("CompanyAdmin"))
                        {
                            <li class="nav-item">
                                <a asp-area="" asp-controller="CompanyAdmin" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>Painel Admin</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Company" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-building"></i>
                                    <p>Empresas</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Condominium" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-city"></i>
                                    <p>Condomínios</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Fraction" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-home"></i>
                                    <p>Frações</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="FractionOwner" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-users"></i>
                                    <p>Proprietários Fração</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="User" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-user-circle"></i>
                                    <p>Utilizadores</p>
                                </a>
                            </li>
                        }
                        else if (User.IsInRole("CondoManager"))
                        {
                            <li class="nav-item">
                                <a asp-area="" asp-controller="CondoManager" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-chart-line"></i>
                                    <p>Painel Gestor</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Condominium" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-city"></i>
                                    <p>Condomínios</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Fraction" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-home"></i>
                                    <p>Frações</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="FractionOwner" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-users"></i>
                                    <p>Proprietários Fração</p>
                                </a>
                            </li>
                        }
                        else if (User.IsInRole("CondoOwner"))
                        {
                            <li class="nav-item">
                                <a asp-area="" asp-controller="CondoOwner" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-user"></i>
                                    <p>Meu Painel</p>
                                </a>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">
                                <i class="nav-icon fas fa-sign-in-alt"></i>
                                <p>Login</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">
                                <i class="nav-icon fas fa-user-plus"></i>
                                <p>Registar</p>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </aside>

    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">@ViewData["Title"]</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Painel">Home</a></li>
                            <li class="breadcrumb-item active">@ViewData["Title"]</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <section class="content">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </section>
    </div>

    <footer class="main-footer">
        <strong>&copy; @DateTime.Now.Year - CondoVision.</strong>
        Todos os direitos reservados.
        <div class="float-right d-none d-sm-inline-block">
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
        </div>
    </footer>

    <aside class="control-sidebar control-sidebar-dark">
    </aside>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
<script src="~/AdminLTE/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js" asp-append-version="true"></script>
<script src="~/AdminLTE/dist/js/adminlte.min.js" asp-append-version="true"></script>

<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

