@using CondoVision.Data.Entities
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CondoVision</title>
    <link rel="icon" href="~/favicon.png" type="image/png" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />

    <!-- AdminLTE & Plugins -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="~/AdminLTE/plugins/overlayScrollbars/css/OverlayScrollbars.min.css" />
    <link rel="stylesheet" href="~/AdminLTE/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/_CondoVisionTheme.css" />

    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light border-bottom">
            <!-- Botão Toggle Sidebar -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Navbar Direita -->
            <ul class="navbar-nav ml-auto">
                <!-- Notificações -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-bell"></i>
                        <span class="badge badge-warning navbar-badge">3</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <span class="dropdown-header">3 Notificações</span>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-envelope mr-2"></i> Nova mensagem
                            <span class="float-right text-muted text-sm">2 min</span>
                        </a>
                        <a href="#" class="dropdown-item dropdown-footer">Ver todas</a>
                    </div>
                </li>

                <!-- Conta Usuário -->
                <li class="nav-item dropdown user-menu">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="far fa-user"></i>
                        <span class="d-none d-md-inline">
                            @(User?.Identity?.IsAuthenticated ?? false ? User.Identity.Name : "Conta")
                        </span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <li class="user-header bg-primary">
                            <img src="~/AdminLTE/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                            <p>
                                @(User?.Identity?.IsAuthenticated ?? false ? User.Identity.Name : "Visitante")
                                <small>CondoVision</small>
                            </p>
                        </li>
                        <li class="user-footer">
                            @if (User?.Identity?.IsAuthenticated ?? false)
                            {
                                <a asp-controller="Account" asp-action="Enable2FA" class="btn btn-default btn-flat">
                                    <i class="fas fa-shield-alt"></i> Segurança
                                </a>
                                <a class="btn btn-default btn-flat float-right" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt"></i> Sair
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-block">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            }
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a asp-controller="Home" asp-action="Painel" class="brand-link text-center">
                <img src="~/AdminLTE/dist/img/AdminLTELogo.png" class="brand-image img-circle elevation-3" />
                <span class="brand-text font-weight-light">CondoVision</span>
            </a>

            <div class="sidebar">
                <!-- Painel Usuário -->
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                        <div class="image">
                            <img src="~/AdminLTE/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image" />
                        </div>
                        <div class="info">
                            <a href="#" class="d-block">@User.Identity.Name</a>
                        </div>
                    </div>
                }

                <!-- Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            @if (User.IsInRole("CompanyAdmin"))
                            {
                                <li class="nav-item has-treeview">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-cogs"></i>
                                        <p>Administração<i class="right fas fa-angle-left"></i></p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a asp-controller="CompanyAdmin" asp-action="Index" class="nav-link">
                                                <i class="fas fa-tachometer-alt nav-icon"></i>
                                                <p>Painel Admin</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="FractionOwner" asp-action="Index" class="nav-link">
                                                <i class="fas fa-users nav-icon"></i>
                                                <p>Gerir Proprietários</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else if (User.IsInRole("CondoManager"))
                            {
                                <li class="nav-item">
                                    <a asp-controller="CondoManager" asp-action="Index" class="nav-link">
                                        <i class="fas fa-chart-line nav-icon"></i>
                                        <p>Painel Gestor</p>
                                    </a>
                                </li>
                            }
                            else if (User.IsInRole("CondoOwner"))
                            {
                                <li class="nav-item">
                                    <a asp-controller="CondoOwner" asp-action="Index" class="nav-link">
                                        <i class="fas fa-user nav-icon"></i>
                                        <p>Meu Painel</p>
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-controller="Account" asp-action="Login" class="nav-link">
                                    <i class="fas fa-sign-in-alt nav-icon"></i>
                                    <p>Login</p>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Conteúdo -->
        <div class="content-wrapper">
            @RenderSection("ContentHeader", required: false)
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer text-sm">
            <div class="float-right d-none d-sm-inline">
                Desenvolvido com <i class="fas fa-heart text-danger"></i> por CondoVision
            </div>
            <strong>&copy; @DateTime.Now.Year - CondoVision</strong>
        </footer>

        <!-- Logout Modal -->
        @await Html.PartialAsync("_LogoutModal")

    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminLTE/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/AdminLTE/dist/js/adminlte.min.js"></script>
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

