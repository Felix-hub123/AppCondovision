@model CondoVision.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Alterar Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg rounded-3 border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Alterar Password</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Account" asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="OldPassword" class="form-label fw-semibold"></label>
                            <input asp-for="OldPassword" type="password" class="form-control" placeholder="Digite a password atual" />
                            <span asp-validation-for="OldPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label fw-semibold"></label>
                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="Digite a nova password" />
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirme a nova password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-shield-lock"></i> Alterar Password
                            </button>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert alert-success mt-4 text-center">@ViewBag.Message</div>
                    }
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" asp-controller="Home" class="text-decoration-none">
                        <i class="bi bi-arrow-left"></i> Voltar para o Início
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
