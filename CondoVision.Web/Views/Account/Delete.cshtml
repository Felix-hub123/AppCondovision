@using CondoVision.Data.Entities
@model User

@{
    ViewData["Title"] = "Eliminar Usuário";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg rounded-3 border-0">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i> Eliminar Usuário
                    </h4>
                </div>
                <div class="card-body p-4 text-center">
                    <h5 class="fw-bold text-danger mb-4">
                        Tem certeza de que deseja eliminar este usuário?
                    </h5>

                    <dl class="row justify-content-center">
                        <dt class="col-sm-4 text-end fw-semibold">@Html.DisplayNameFor(model => model.FullName):</dt>
                        <dd class="col-sm-6 text-start">@Html.DisplayFor(model => model.FullName)</dd>

                        <dt class="col-sm-4 text-end fw-semibold">@Html.DisplayNameFor(model => model.Email):</dt>
                        <dd class="col-sm-6 text-start">@Html.DisplayFor(model => model.Email)</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-danger btn-lg" onclick="return confirm('Tem certeza de que deseja eliminar este usuário?');">
                                <i class="bi bi-trash-fill"></i> Eliminar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>