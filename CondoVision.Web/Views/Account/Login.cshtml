@model CondoVision.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-12 text-center">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7 col-sm-12">
                <div class="card shadow-sm border-0 rounded-lg">
                    <div class="card-header bg-primary text-white text-center">
                        <h4 class="card-title m-0">Inicie sua sessão</h4>
                    </div>
                    <div class="card-body">
                        @if (ViewData.ModelState.ErrorCount > 0)
                        {
                            <div class="alert alert-danger">
                                <ul class="mb-0">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }

                        <form asp-action="Login" method="post" novalidate>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="Digite seu e-mail" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Digite sua senha" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            <div class="mb-3 form-check">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label">Lembrar-me</label>
                            </div>
                            <div class="d-grid gap-2 mb-2">
                                <button type="submit" class="btn btn-primary btn-lg">Login</button>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a asp-action="Register" class="btn btn-outline-secondary btn-sm">Registar</a>
                                <a asp-action="ForgotPassword" class="btn btn-link btn-sm">Esqueceu a senha?</a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="text-center mt-3">
                    <small class="text-muted">Digite suas credenciais para acessar o sistema.</small>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
