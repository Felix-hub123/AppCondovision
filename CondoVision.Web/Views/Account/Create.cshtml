@using CondoVision.Models
@model CreateUserViewModel

@{
    ViewData["Title"] = "Criar Novo Usuário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Painel">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Account" asp-action="Index">Gerir Utilizadores</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-6">
                <div class="card shadow-lg rounded-3 border-0">
                    <div class="card-header bg-primary text-white text-center">
                        <h4 class="mb-0">
                            <i class="bi bi-person-plus-fill"></i> Criar Novo Usuário
                        </h4>
                    </div>
                    <div class="card-body p-4">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success mb-3">@TempData["SuccessMessage"]</div>
                        }
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        }

                        <form asp-action="Create" method="post">
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Email, new { @class = "form-label fw-semibold" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Ex: utilizador@exemplo.com" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.FullName, new { @class = "form-label fw-semibold" })
                                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Nome completo" })
                                @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger small" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.RoleName, new { @class = "form-label fw-semibold" })
                                @Html.DropDownListFor(m => m.RoleName, (IEnumerable<SelectListItem>)ViewBag.Roles, "-- Selecione uma Role --", new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.RoleName, "", new { @class = "text-danger small" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Password, new { @class = "form-label fw-semibold" })
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Mínimo 6 caracteres" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label fw-semibold" })
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirme a password" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.TaxId, new { @class = "form-label fw-semibold" })
                                @Html.TextBoxFor(m => m.TaxId, new { @class = "form-control", placeholder = "Ex: 123456789" })
                                @Html.ValidationMessageFor(m => m.TaxId, "", new { @class = "text-danger small" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.DateOfBirth, new { @class = "form-label fw-semibold" })
                                @Html.TextBoxFor(m => m.DateOfBirth, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger small" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.CompanyId, new { @class = "form-label fw-semibold" })
                                @Html.DropDownListFor(m => m.CompanyId, (IEnumerable<SelectListItem>)ViewBag.Companies, "-- Selecione uma Empresa --", new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.CompanyId, "", new { @class = "text-danger small" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.PhoneNumber, new { @class = "form-label fw-semibold" })
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Ex: +351 912345678" })
                                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger small" })
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-save"></i> Criar Usuário
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}