@using CondoVision.Models
@model RegisterUserViewModel

@{
    ViewData["Title"] = "Criar Novo Usuário";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg rounded-3 border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">
                        <i class="bi bi-person-plus-fill"></i> Criar Novo Usuário
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.FullName, new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Nome completo" })
                            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Username, new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Nome de usuário" })
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Password, new { @class = "form-label fw-semibold" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Digite uma senha" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label fw-semibold" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirme a senha" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.PhoneNumber, new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Número de telefone" })
                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger small" })
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Criar Usuário
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

