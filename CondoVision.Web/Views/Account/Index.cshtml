@using CondoVision.Models
@model List<UserListViewModel>

<h2>Lista de Usuários</h2>


@if (Model == null || !Model.Any())
{
    <p>Nenhum usuário encontrado.</p>
}
else
{
    <form asp-action="Index" method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Pesquisar por nome ou e-mail" />
            <button type="submit" class="btn btn-primary">Pesquisar</button>
        </div>
    </form>

<table>
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.First().FullName)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["EmailSortParm"]">@Html.DisplayNameFor(model => model.First().Email)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().PhoneNumber)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja eliminar?');">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination">
    Página @(ViewBag.CurrentPage) de @ViewBag.TotalPages
    @if (ViewBag.CurrentPage > 1)
    {
        <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-searchString="@ViewData["CurrentFilter"]" class="btn btn-secondary">Anterior</a>
    }
    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-searchString="@ViewData["CurrentFilter"]" class="btn btn-secondary">Próxima</a>
    }
</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}