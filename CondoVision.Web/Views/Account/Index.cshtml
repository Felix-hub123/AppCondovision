@using CondoVision.Models
@model UserListViewModelWrapper

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Lista de Usuários</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Painel">Home</a></li>
                    <li class="breadcrumb-item active">Lista de Usuários</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content-section py-5">
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success mb-3">@TempData["SuccessMessage"]</div>
        }

        <div class="row mb-3">
            <div class="col-12 d-flex justify-content-between align-items-center">
                <div></div> 
                <form asp-action="Index" method="get" class="d-flex">
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control me-2" placeholder="Pesquisar por nome ou e-mail" />
                    <button type="submit" class="btn btn-primary">Pesquisar</button>
                </form>
                <a asp-action="Create" class="btn btn-success mb-3">Criar Novo Usuário</a>
            </div>
        </div>

        @if (Model.Items == null || !Model.Items.Any()) 
        {
            <div class="alert alert-info text-center">
                Nenhum usuário encontrado.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <a asp-action="Index" asp-route-sortOrder="@(ViewData["NameSortParm"] ?? "name")">Nome</a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortOrder="@(ViewData["EmailSortParm"] ?? "email_desc")">Email</a>
                            </th>
                            <th>Telefone</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.FullName</td>
                                <td>@item.Email</td>
                                <td>@item.PhoneNumber</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">Editar</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Tem certeza que deseja eliminar este usuário?');">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <nav aria-label="Navegação de páginas">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-searchString="@ViewData["CurrentFilter"]">Anterior</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-searchString="@ViewData["CurrentFilter"]">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-searchString="@ViewData["CurrentFilter"]">Próxima</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

