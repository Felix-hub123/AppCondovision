@model CondoVision.Models.EditProfileViewModel

@{
    ViewData["Title"] = "Editar Perfil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg rounded-3 border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">
                        <i class="bi bi-person-circle"></i> Editar Perfil
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Account" asp-action="EditProfile" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <input asp-for="Email" class="form-control" readonly />
                            <small class="text-muted">O email não pode ser alterado.</small>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label fw-semibold"></label>
                            <input asp-for="ImageFile" type="file" class="form-control" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>

                            @if (Model.ImageId.HasValue)
                            {
                                <div class="mt-3 text-center">
                                    <img src="~/images/users/@(Model.ImageId.Value).png"
                                         class="img-thumbnail shadow-sm" style="max-width: 120px;" />
                                    <p class="text-muted mt-1 small">Imagem atual do perfil</p>
                                </div>
                            }
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Guardar Alterações
                            </button>
                            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
                                <i class="bi bi-house-door"></i> Voltar
                            </a>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert alert-success mt-3 text-center">@ViewBag.Message</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
