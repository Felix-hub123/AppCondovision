@using CondoVision.Data.Entities
@using Microsoft.AspNetCore.Identity
@model IEnumerable<User>
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Gerir Utilizadores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-success">Novo Utilizador</a>
    </div>

    <form asp-action="Index" method="get" class="mb-3 w-50">
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Pesquisar por Email ou Nome..." value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn btn-primary">Pesquisar</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["EmailSortParm"]">Email</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">Nome</a>
                    </th>
                    <th>Papel</th>
                    <th>Status</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    var roles = await UserManager.GetRolesAsync(user);
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.FullName</td>
                        <td>@(roles != null && roles.Any() ? string.Join(", ", roles) : "-")</td>
                        <td>
                            @if (user.EmailConfirmed)
                            {
                                <span class="badge bg-success">Ativo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inativo</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm me-1">Editar</a>
                            <a asp-action="ManageRoles" asp-route-userId="@user.Id" class="btn btn-primary btn-sm me-1">Gerir Permissões</a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja eliminar este utilizador?');">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="Navegação de páginas">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
