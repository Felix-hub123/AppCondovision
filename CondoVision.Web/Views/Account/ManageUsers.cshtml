@using CondoVision.Data.Entities
@model IEnumerable<User>

@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Gerir Utilizadores</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Nome Completo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FullName</td>
                <td>
                    <a asp-action="ManageRoles" asp-route-userId="@user.Id" class="btn btn-primary">Gerir Permissões</a>
                </td>
            </tr>
        }
    </tbody>
</table>