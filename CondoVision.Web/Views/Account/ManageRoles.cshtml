@model CondoVision.Models.ManageRolesViewModel

@{
    ViewData["Title"] = "Gerir Permissões";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-12">
            <div class="card shadow-sm border-0 rounded-lg mt-4">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="card-title m-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form asp-action="ManageRoles" method="post" novalidate>
                        <input type="hidden" asp-for="UserId" />
                        <div class="mb-3">
                            <label asp-for="RoleName" class="form-label"></label>
                            <select asp-for="RoleName" class="form-select" asp-items="Model.Roles">
                                <option value="">Selecione uma permissão</option>
                            </select>
                            <span asp-validation-for="RoleName" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Atribuir Permissão</button>
                            <a asp-action="ManageUsers" class="btn btn-outline-secondary btn-lg">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

