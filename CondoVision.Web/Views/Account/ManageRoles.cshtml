@model CondoVision.Models.ManageRolesViewModel

@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Gerir Permissões</h1>

<form asp-action="ManageRoles" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label asp-for="RoleName" class="control-label"></label>
        <select asp-for="RoleName" class="form-control" asp-items="Model.Roles">
            <option value="">Selecione uma permissão</option>
        </select>
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Atribuir Permissão</button>
        <a asp-action="ManageUsers" class="btn btn-secondary">Voltar</a>
    </div>
</form>