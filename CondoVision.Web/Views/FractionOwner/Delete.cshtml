@model CondoVision.Models.FractionOwnerViewModel

@{
    ViewData["Title"] = "Excluir Proprietário";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h3>Tem certeza de que deseja excluir este proprietário?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Unidade</dt>
        <dd class="col-sm-10">@Model.UnitNumber</dd>
        <dt class="col-sm-2">Proprietário</dt>
        <dd class="col-sm-10">@Model.OwnerFullName</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.OwnerEmail</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
