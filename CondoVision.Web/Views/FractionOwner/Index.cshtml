@model CondoVision.Models.FractionOwnerListViewModel

@{
    ViewData["Title"] = "Lista de Proprietários de Frações";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Proprietário</a>
</p>

@if (Model.FractionOwners!.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Número da Unidade</th>
                <th>Andar</th>
                <th>Bloco</th>
                <th>Condomínio</th>
                <th>Nome do Proprietário</th>
                <th>Email</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.FractionOwners!)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UnitNumber</td>
                    <td>@item.FractionFloor</td>
                    <td>@item.FractionBlock</td>
                    <td>@item.CondominiumName</td>
                    <td>@item.OwnerFullName</td>
                    <td>@item.OwnerEmail</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>Total de proprietários ativos: @Model.TotalCount</p>
}
else
{
    <p>Nenhum proprietário ativo encontrado.</p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}