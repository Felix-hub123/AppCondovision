@{
    ViewData["Title"] = "Painel do Administrador";
}



<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>150</h3>
                        <p>Total de Empresas</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <a asp-controller="Company" asp-action="Index" class="small-box-footer">
                        Mais detalhes <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>53</h3>
                        <p>Total de Utilizadores</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <a asp-controller="User" asp-action="Index" class="small-box-footer">
                        Mais detalhes <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>44</h3>
                        <p>Total de Condomínios</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-city"></i>
                    </div>
                    <a asp-controller="Condominium" asp-action="Index" class="small-box-footer">
                        Mais detalhes <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>65</h3>
                        <p>Faturas Pendentes</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-file-invoice-dollar"></i>
                    </div>
                    <a href="#" class="small-box-footer">
                        Mais detalhes <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Opções de Administração</h3>
                    </div>
                    <div class="card-body p-0">
                        <ul class="nav nav-pills flex-column">
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Company" asp-action="Index" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i> Gerir Empresas
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="User" asp-action="Index" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i> Gerir Utilizadores
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Role" asp-action="Index" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i> Gerir Roles
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Condominium" asp-action="Index" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i> Gerir Condomínios
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Fraction" asp-action="Index" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i> Gerir Frações
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="FractionOwner" asp-action="Index" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i> Gerir Proprietários de Frações
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card card-info card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Visão Geral dos Dados</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <canvas id="myChart" style="height:250px; min-height:250px"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Últimas Atividades</h3>
                        <div class="card-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control float-right" placeholder="Pesquisar">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Utilizador</th>
                                    <th>Ação</th>
                                    <th>Data</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>João Silva</td>
                                    <td>Criou nova Empresa</td>
                                    <td>10-08-2025</td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Maria Costa</td>
                                    <td>Atualizou Condomínio</td>
                                    <td>09-08-2025</td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>Pedro Santos</td>
                                    <td>Eliminou Fração</td>
                                    <td>08-08-2025</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

@section Scripts {
    <script src="~/AdminLTE/plugins/chart.js/Chart.min.js" asp-append-version="true"></script>
    <script>
        $(function () {
            var ctx = document.getElementById('myChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Empresas', 'Utilizadores', 'Condomínios', 'Frações'],
                    datasets: [{
                        label: 'Quantidade',
                        data: [150, 53, 44, 210],
                        backgroundColor: [
                            'rgba(23, 162, 184, 0.7)', // info color
                            'rgba(40, 167, 69, 0.7)',  // success color
                            'rgba(255, 193, 7, 0.7)',  // warning color
                            'rgba(220, 53, 69, 0.7)'   // danger color
                        ],
                        borderColor: [
                            'rgba(23, 162, 184, 1)',
                            'rgba(40, 167, 69, 1)',
                            'rgba(255, 193, 7, 1)',
                            'rgba(220, 53, 69, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
}

