@model CondoVision.Models.DashBoardViewModel
@using System.Text.Json

@{
    ViewData["Title"] = "Painel de Administração - CondoVision";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">@ViewData["Title"]</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">Painel de Administração</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Alertas de sucesso/erro -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle mr-2"></i>
                    <strong>Sucesso!</strong> @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle mr-2"></i>
                    <strong>Erro!</strong> @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <!-- Cards principais -->
            <div class="row">
                <div class="col-md-4">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <h3 class="card-title">@Model.CompaniesCount</h3>
                            <p class="card-text">Empresas Ativas</p>
                            <a href="#" class="card-link text-white font-weight-bold">Ver Detalhes <i class="fas fa-arrow-right ml-2"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <h3 class="card-title">@Model.UsersCount</h3>
                            <p class="card-text">Utilizadores Registrados</p>
                            <a href="#" class="card-link text-white font-weight-bold">Ver Detalhes <i class="fas fa-arrow-right ml-2"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <h3 class="card-title">@Model.CondominiumsCount</h3>
                            <p class="card-text">Condomínios Gerenciados</p>
                            <a href="#" class="card-link text-white font-weight-bold">Ver Detalhes <i class="fas fa-arrow-right ml-2"></i></a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Ações rápidas e gráfico -->
            <div class="row">
                <!-- Ações rápidas -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Ações Rápidas</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @if (User.IsInRole("CompanyAdmin"))
                                {
                                    <div class="col-12 mb-2">
                                        <a asp-action="Create" asp-controller="Companies"
                                           class="btn btn-success btn-block">
                                            <i class="fas fa-building-circle-check mr-2"></i> Criar Nova Empresa
                                        </a>
                                    </div>
                                    <div class="col-12 mb-2">
                                        <a asp-action="Create" asp-controller="Account"
                                           class="btn btn-primary btn-block">
                                            <i class="fas fa-user-plus mr-2"></i> Registrar Novo Utilizador
                                        </a>
                                    </div>
                                }
                                <div class="col-12 mb-2">
                                    <a asp-action="Index" asp-controller="Companies"
                                       class="btn btn-outline-primary btn-block">
                                        <i class="fas fa-list-alt mr-2"></i> Visualizar Empresas
                                    </a>
                                </div>
                                @if (User.IsInRole("CompanyAdmin"))
                                {
                                    <div class="col-12 mb-2">
                                        <a asp-action="Create" asp-controller="Condominiums"
                                           class="btn btn-outline-warning btn-block">
                                            <i class="fas fa-city mr-2"></i> Adicionar Novo Condomínio
                                        </a>
                                    </div>
                                }
                                <div class="col-12 mb-2">
                                    <a asp-action="Index" asp-controller="Condominium"
                                       class="btn btn-outline-primary btn-block">
                                        <i class="fas fa-building mr-2"></i> Gerenciar Condomínios
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Gráfico -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Visão Geral dos Dados</h3>
                        </div>
                        <div class="card-body">
                            <canvas id="overviewChart" class="w-full h-64"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Histórico de atividades -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Histórico de Atividades Recentes</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Utilizador</th>
                                    <th>Ação</th>
                                    <th>Data</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentActivities != null && Model.RecentActivities.Any())
                                {
                                    foreach (var activity in Model.RecentActivities)
                                    {
                                        var badgeClass = "badge badge-secondary";
                                        var actionText = activity.Action ?? "Ação Desconhecida";

                                        if (actionText.Contains("Criou"))
                                        {
                                            badgeClass = "badge badge-success";
                                        }
                                        else if (actionText.Contains("Atualizou"))
                                        {
                                            badgeClass = "badge badge-primary";
                                        }
                                        else if (actionText.Contains("Eliminou"))
                                        {
                                            badgeClass = "badge badge-danger";
                                        }

                                        <tr>
                                            <td>@activity.Id</td>
                                            <td>@activity.UserName</td>
                                            <td>
                                                <span class="@badgeClass">@actionText</span>
                                            </td>
                                            <td>@activity.Date.ToString("dd MMM yyyy, HH:mm")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted">Nenhuma atividade recente encontrada.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section Scripts {
    <script src="~/AdminLTE/plugins/chart.js/Chart.min.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var dashboardData = @Html.Raw(JsonSerializer.Serialize(Model, new JsonSerializerOptions { PropertyNamingPolicy = JsonNamingPolicy.CamelCase }));

            var ctx = document.getElementById('overviewChart');
            if (ctx) {
                if (Chart.getChart(ctx)) {
                    Chart.getChart(ctx).destroy();
                }

                new Chart(ctx.getContext('2d'), {
                    type: 'bar',
                    data: {
                        labels: ['Empresas', 'Utilizadores', 'Condomínios'],
                        datasets: [{
                            data: [
                                dashboardData.companiesCount || 0,
                                dashboardData.usersCount || 0,
                                dashboardData.condominiumsCount || 0
                            ],
                            backgroundColor: ['#007bff', '#28a745', '#ffc107'],
                            borderRadius: 8,
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: { legend: { display: false } },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: { precision: 0 }
                            }
                        }
                    }
                });
            }
        });
    </script>
}