@model CondoVision.Models.HomeViewModel
@{
    ViewData["Title"] = "CondoVision: Soluções de Gestão de Condomínios";
    ViewData["Description"] = "Plataforma moderna, segura e intuitiva para empresas de administração condominial. Automatize processos, melhore a comunicação e reduza custos.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<div class="callout callout-custom hero-background" style="position: relative; min-height: 400px;">
    <div class="hero-overlay"></div>
    <div class="text-center text-white p-5" style="position: relative; z-index: 1;">
        <h1 class="display-3 font-weight-bold mb-4 animated-text" style="font-family: 'Source Sans Pro', sans-serif;">
            CondoVision: <span class="text-accent">Gestão Simplificada</span>
        </h1>
        <p class="lead mb-5 animated-text" style="font-size: 1.3rem; font-weight: 600; text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);">
            Plataforma moderna, segura e intuitiva para empresas de administração condominial.
            Automatize processos, melhore a comunicação e reduza custos.
        </p>
        <a asp-controller="Account" asp-action="Login" class="btn btn-modern-gradient floating-btn">Entrar</a>
    </div>
</div>

<!-- Features Section -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card card-custom">
            <div class="card-header bg-white">
                <h3 class="card-title animated-text" style="font-family: 'Source Sans Pro', sans-serif; font-weight: 700;">
                    Porquê escolher o <span class="text-accent">CondoVision</span>?
                </h3>
                <p class="card-text animated-text" style="font-weight: 500;">Descubra as vantagens da nossa plataforma de gestão condominial</p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 col-sm-6 col-12 mb-4">
                        <div class="card card-custom h-100">
                            <div class="card-body text-center">
                                <div class="feature-icon mb-3">
                                    <i class="fas fa-chart-line text-accent" style="font-size: 2.5rem;"></i>
                                </div>
                                <h4 class="h5 animated-text" style="font-weight: 700;">Gestão Inteligente</h4>
                                <p class="text-muted animated-text" style="font-weight: 500;">Automatize finanças, relatórios e processos administrativos.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 col-12 mb-4">
                        <div class="card card-custom h-100">
                            <div class="card-body text-center">
                                <div class="feature-icon mb-3">
                                    <i class="fas fa-comments text-accent" style="font-size: 2.5rem;"></i>
                                </div>
                                <h4 class="h5 animated-text" style="font-weight: 700;">Comunicação Transparente</h4>
                                <p class="text-muted animated-text" style="font-weight: 500;">Conecte administradores e condôminos com eficácia.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 col-12 mb-4">
                        <div class="card card-custom h-100">
                            <div class="card-body text-center">
                                <div class="feature-icon mb-3">
                                    <i class="fas fa-lock text-accent" style="font-size: 2.5rem;"></i>
                                </div>
                                <h4 class="h5 animated-text" style="font-weight: 700;">Segurança Avançada</h4>
                                <p class="text-muted animated-text" style="font-weight: 500;">Proteção de dados com 2FA e encriptação moderna.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 col-12 mb-4">
                        <div class="card card-custom h-100">
                            <div class="card-body text-center">
                                <div class="feature-icon mb-3">
                                    <i class="fas fa-mobile-alt text-accent" style="font-size: 2.5rem;"></i>
                                </div>
                                <h4 class="h5 animated-text" style="font-weight: 700;">Acesso Multiplataforma</h4>
                                <p class="text-muted animated-text" style="font-weight: 500;">Use em qualquer dispositivo, a qualquer hora.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Seção de Imagem do Condomínio -->
<div class="condo-background">
    <div class="condo-overlay"></div>
    <div class="condo-text">
        <h2 class="display-4 animated-text">Viva a experiência do Condomínio Perfeito</h2>
        <p class="lead animated-text">Gerencie com eficiência e transforme a vida dos condôminos.</p>
    </div>
</div>

<!-- Testimonials Section -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card card-custom">
            <div class="card-header bg-white">
                <h3 class="card-title animated-text" style="font-family: 'Source Sans Pro', sans-serif; font-weight: 700;">
                    O que dizem os <span class="text-accent">clientes</span> do CondoVision
                </h3>
            </div>
            <div class="card-body">
                <div id="testimonialCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="row">
                                <div class="col-md-4 col-sm-6 col-12 mb-4">
                                    <div class="card card-custom">
                                        <div class="card-body text-center">
                                            <p class="text-muted font-italic mb-4 animated-text" style="font-weight: 500;">
                                                "A CondoVision transformou a forma como gerimos os nossos condomínios. Tudo é mais rápido e transparente."
                                            </p>
                                            <h4 class="h5 font-weight-bold animated-text" style="font-weight: 700;">Maria Fernandes</h4>
                                            <p class="text-muted mb-0 animated-text" style="font-weight: 500;">Administradora</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-6 col-12 mb-4">
                                    <div class="card card-custom">
                                        <div class="card-body text-center">
                                            <p class="text-muted font-italic mb-4 animated-text" style="font-weight: 500;">
                                                "Finalmente conseguimos reduzir custos e aumentar a satisfação dos condôminos. Recomendo!"
                                            </p>
                                            <h4 class="h5 font-weight-bold animated-text" style="font-weight: 700;">João Pereira</h4>
                                            <p class="text-muted mb-0 animated-text" style="font-weight: 500;">Gestor</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="row">
                                <div class="col-md-4 col-sm-6 col-12 mb-4">
                                    <div class="card card-custom">
                                        <div class="card-body text-center">
                                            <p class="text-muted font-italic mb-4 animated-text" style="font-weight: 500;">
                                                "Simples de usar, bonito e muito funcional. É a solução que sempre procurávamos."
                                            </p>
                                            <h4 class="h5 font-weight-bold animated-text" style="font-weight: 700;">Ana Costa</h4>
                                            <p class="text-muted mb-0 animated-text" style="font-weight: 500;">Síndica</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#testimonialCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#testimonialCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- FAQ Section -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card card-custom">
            <div class="card-header bg-white">
                <h3 class="card-title animated-text" style="font-family: 'Source Sans Pro', sans-serif; font-weight: 700;">
                    Perguntas <span class="text-accent">Frequentes</span> sobre o CondoVision
                </h3>
            </div>
            <div class="card-body">
                <div class="accordion" id="faqAccordion">
                    <div class="card card-custom">
                        <div class="card-header" id="faqHeadingOne">
                            <h2 class="mb-0">
                                <button class="btn btn-link btn-block text-left animated-text" type="button" data-toggle="collapse" data-target="#faqCollapseOne" aria-expanded="true" aria-controls="faqCollapseOne" style="font-weight: 600;">
                                    É necessário instalar algum software?
                                    <i class="fas fa-chevron-down float-right"></i>
                                </button>
                            </h2>
                        </div>
                        <div id="faqCollapseOne" class="collapse show" aria-labelledby="faqHeadingOne" data-parent="#faqAccordion">
                            <div class="card-body animated-text" style="font-weight: 500;">
                                Não. O CondoVision é 100% online e funciona em qualquer navegador moderno.
                            </div>
                        </div>
                    </div>
                    <div class="card card-custom">
                        <div class="card-header" id="faqHeadingTwo">
                            <h2 class="mb-0">
                                <button class="btn btn-link btn-block text-left animated-text" type="button" data-toggle="collapse" data-target="#faqCollapseTwo" aria-expanded="false" aria-controls="faqCollapseTwo" style="font-weight: 600;">
                                    E quanto à segurança dos dados?
                                    <i class="fas fa-chevron-down float-right"></i>
                                </button>
                            </h2>
                        </div>
                        <div id="faqCollapseTwo" class="collapse" aria-labelledby="faqHeadingTwo" data-parent="#faqAccordion">
                            <div class="card-body animated-text" style="font-weight: 500;">
                                Utilizamos criptografia de ponta a ponta e autenticação multifator.
                            </div>
                        </div>
                    </div>
                    <div class="card card-custom">
                        <div class="card-header" id="faqHeadingThree">
                            <h2 class="mb-0">
                                <button class="btn btn-link btn-block text-left animated-text" type="button" data-toggle="collapse" data-target="#faqCollapseThree" aria-expanded="false" aria-controls="faqCollapseThree" style="font-weight: 600;">
                                    Como funciona o suporte?
                                    <i class="fas fa-chevron-down float-right"></i>
                                </button>
                            </h2>
                        </div>
                        <div id="faqCollapseThree" class="collapse" aria-labelledby="faqHeadingThree" data-parent="#faqAccordion">
                            <div class="card-body animated-text" style="font-weight: 500;">
                                Oferecemos suporte 24/7 via chat, email e telefone.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Adicione estilos personalizados aqui, se necessário -->
<style>
    .hero-background {
        background: url('https://images.unsplash.com/photo-1592595894921-b3a3fe1b2c2e?ixlib=rb-4.0.3&auto=format&fit=crop&w=1350&q=80') no-repeat center center;
        background-size: cover;
        position: relative;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, rgba(249, 115, 22, 0.85), rgba(16, 185, 129, 0.7));
    }

    .condo-background {
        background: url('https://images.unsplash.com/photo-1600585154340-be6161a56a0c?ixlib=rb-4.0.3&auto=format&fit=crop&w=1350&q=80') no-repeat center center;
        background-size: cover;
        position: relative;
        min-height: 500px; /* Aumentado para atender ao pedido */
        margin-top: 1rem; /* Movido mais acima */
    }

    .condo-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
    }

    .condo-text {
        position: relative;
        z-index: 1;
        color: white;
        text-align: center;
        padding: 4rem 1rem;
    }

    .card-custom {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .animated-text {
        animation: fadeInUp 1.5s ease-out;
    }

    keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .btn-modern-gradient {
        background: linear-gradient(135deg, #f97316 0%, #10b981 100%);
        border: none;
        color: white;
        font-weight: 600;
        padding: 0.75rem 2rem;
        border-radius: 50px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

        .btn-modern-gradient:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
            color: white;
        }

    .floating-btn {
        animation: float 3s infinite ease-in-out;
    }

    keyframes float {
        0%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-10px);
    }

    100% {
        transform: translateY(0);
    }

    }
</style>

