@model IEnumerable<CondoVision.Data.Entities.Condominium>

@{
    ViewData["Title"] = "Gerir Condomínios";
 
}

@section Styles {
    <link rel="stylesheet" href="~/AdminLTE/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AdminLTE/plugins/datatables-responsive/css/responsive.bootstrap4.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AdminLTE/plugins/datatables-buttons/css/buttons.bootstrap4.min.css" asp-append-version="true" />
}



<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-building"></i> Lista de Condomínios</h3>
                        <div class="card-tools">
                            <a asp-action="Create" class="btn btn-sm btn-success">
                                <i class="fas fa-plus"></i> Criar Novo Condomínio
                            </a>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <table id="condominiumTable" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.Address)</th>
                                    <th>@Html.DisplayNameFor(model => model.Company)</th>
                                    <th class="text-right">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Company!.Name)</td>
                                        <td class="text-right">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye"></i> Detalhes
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i> Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/AdminLTE/plugins/datatables/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/datatables-responsive/js/dataTables.responsive.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/datatables-responsive/js/responsive.bootstrap4.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/datatables-buttons/js/dataTables.buttons.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/datatables-buttons/js/buttons.bootstrap4.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/jszip/jszip.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/pdfmake/pdfmake.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/pdfmake/vfs_fonts.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/datatables-buttons/js/buttons.html5.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/datatables-buttons/js/buttons.print.min.js" asp-append-version="true"></script>
    <script src="~/AdminLTE/plugins/datatables-buttons/js/buttons.colVis.min.js" asp-append-version="true"></script>
    <script>
        $(function () {
            $("#condominiumTable").DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Portuguese.json"
                }
            }).buttons().container().appendTo('#condominiumTable_wrapper .col-md-6:eq(0)');
        });
    </script>
}
