@model IEnumerable<CondoVision.Models.CondominiumViewModel>

@{
    ViewData["Title"] = "Gerir Condomínios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.0.1/css/buttons.bootstrap5.min.css" />
}

<section class="content-section py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="section-title mb-0">Gestão de Condomínios</h1>
            <a asp-action="Create" class="btn btn-lg btn-condovision-save">
                <i class="fas fa-plus-circle me-2"></i> Criar Novo Condomínio
            </a>
        </div>
        <p class="section-subtitle">Aqui pode visualizar e gerir todos os condomínios registados na plataforma.</p>

        <div class="mb-4">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-auto">
                    <label class="form-label">Filtrar por Empresa</label>
                    <select asp-items="ViewBag.Companies" name="companyId" class="form-select">
                        <option value="">Todas as Empresas</option>
                    </select>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                </div>
            </form>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success mb-4">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger mb-4">
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="card shadow-lg rounded-lg">
            <div class="card-body p-4">
                <div class="table-responsive">
                    @if (Model == null || !Model.Any())
                    {
                        <div class="alert alert-warning text-center mb-4">Nenhum condomínio encontrado.</div>
                    }
                    else
                    {
                        <table class="table table-hover table-striped" id="condominiumTable">
                            <thead class="bg-primary text-white">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.Address)</th>
                                    <th>@Html.DisplayNameFor(model => model.City)</th>
                                    <th>@Html.DisplayNameFor(model => model.PostalCode)</th>
                                    <th>@Html.DisplayNameFor(model => model.CompanyName)</th>
                                    <th class="text-center"><i class="fas fa-cogs"></i> Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                        <td>@Html.DisplayFor(modelItem => item.City)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PostalCode)</td>
                                        <td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-condovision-info-3d" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-condovision-secondary-3d" title="Detalhes">
                                                    <i class="fas fa-info-circle"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-condovision-delete" title="Eliminar">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                                <a asp-action="Units" asp-route-condominiumId="@item.Id" class="btn btn-sm btn-info" title="Ver Unidades">
                                                    <i class="fas fa-home"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.7.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.70/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.70/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.colvis.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#condominiumTable').DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.3/i18n/pt_pt.json"
                },
                "order": [[0, "asc"]]
            }).buttons().container().appendTo('#condominiumTable_wrapper .col-md-6:eq(0)');
        });
    </script>
}