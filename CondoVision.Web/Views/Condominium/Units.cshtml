@model IEnumerable<CondoVision.Models.UnitViewModel>

@{
    ViewData["Title"] = "Unidades do Condomínio " + ViewBag.CondominiumName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css" />
}

<section class="content-section py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="section-title mb-0">Unidades do Condomínio @ViewBag.CondominiumName</h1>
            <a asp-action="Create" asp-controller="Unit" asp-route-condominiumId="@ViewBag.CondominiumId" class="btn btn-lg btn-condovision-save">
                <i class="fas fa-plus-circle me-2"></i> Criar Nova Unidade
            </a>
        </div>
        <p class="section-subtitle">Aqui pode visualizar e gerir as unidades registadas neste condomínio.</p>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success mb-4">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="card shadow-lg rounded-lg">
            <div class="card-body p-4">
                <div class="table-responsive">
                    <table class="table table-hover table-striped" id="unitTable">
                        <thead class="bg-primary text-white">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.UnitName)</th>
                                <th>@Html.DisplayNameFor(model => model.Permillage)</th>
                                <th>@Html.DisplayNameFor(model => model.OwnerFullName)</th>
                                <th class="text-center"><i class="fas fa-cogs"></i> Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.UnitName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Permillage)</td>
                                    <td>@Html.DisplayFor(modelItem => item.OwnerFullName)</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-controller="Unit" asp-route-id="@item.Id" class="btn btn-sm btn-condovision-info-3d" title="Detalhes">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a asp-action="Edit" asp-controller="Unit" asp-route-id="@item.Id" class="btn btn-sm btn-condovision-secondary-3d" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-controller="Unit" asp-route-id="@item.Id" class="btn btn-sm btn-condovision-delete" title="Eliminar">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#unitTable').DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.3/i18n/pt_pt.json"
                }
            });
        });
    </script>
}
