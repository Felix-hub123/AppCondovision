@model CondoVision.Models.EditCondominiumViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg rounded-lg p-4">
                    <div class="card-header bg-transparent border-0 text-center pb-0">
                        <h1 class="section-title mb-1">Editar Condomínio</h1>
                        <p class="section-subtitle">Altere os dados do condomínio selecionado.</p>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="RegistrationDate" />
                            <input type="hidden" asp-for="WasDeleted" />

                            <div class="mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Address" class="form-label"></label>
                                <input asp-for="Address" class="form-control">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="City" class="form-label"></label>
                                <input asp-for="City" class="form-control">
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PostalCode" class="form-label"></label>
                                <input asp-for="PostalCode" class="form-control">
                                <span asp-validation-for="PostalCode" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CompanyId" class="form-label"></label>
                                <select asp-for="CompanyId" asp-items="Model.Companies" class="form-select">
                                    <option value="">-- Selecione uma Empresa --</option>
                                </select>
                                <span asp-validation-for="CompanyId" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-lg btn-condovision-save">
                                    <i class="fas fa-save me-2"></i> Guardar Alterações
                                </button>
                                <a asp-action="Index" class="btn btn-lg btn-condovision-back">
                                    <i class="fas fa-arrow-left me-2"></i> Voltar para a Lista
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}