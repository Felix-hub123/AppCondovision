@model CondoVision.Models.CondominiumViewModel

@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Painel">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Condominium" asp-action="Index">Gerir Condomínios</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 col-sm-12">
                <div class="card card-danger card-outline">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-exclamation-triangle"></i> Confirmação de Eliminação</h3>
                    </div>
                    <div class="card-body">
                        <h3 class="lead text-center mb-4">Tem a certeza de que quer eliminar este condomínio?</h3>
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <dl class="row">
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Name)
                            </dd>

                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Address)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Address)
                            </dd>

                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.City)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.City)
                            </dd>

                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.PostalCode)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.PostalCode)
                            </dd>

                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CompanyName)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CompanyName)
                            </dd>
                        </dl>
                    </div>
                    <div class="card-footer text-center">
                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-condovision-delete" data-bs-toggle="modal" data-bs-target="#confirmDeleteModalCondominium" aria-describedby="deleteHelp">
                                <i class="fas fa-trash-alt me-2"></i> Eliminar Condomínio
                            </button>
                            <a asp-action="Index" class="btn btn-condovision-back" aria-describedby="backHelp">
                                <i class="fas fa-arrow-left me-2"></i> Voltar para a Lista
                            </a>
                        </div>
                        <small id="deleteHelp" class="form-text text-muted">Confirme a eliminação no modal.</small>
                        <small id="backHelp" class="form-text text-muted">Retorne à lista de condomínios.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="confirmDeleteModalCondominium" tabindex="-1" aria-labelledby="confirmDeleteModalCondominiumLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalCondominiumLabel">Confirmação de Eliminação</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Tem a certeza de que quer eliminar o condomínio **@Model.Name**?</p>
                <p class="text-danger"><small>Esta ação fará um soft-delete e não poderá ser desfeita diretamente por aqui.</small></p>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-condovision-delete" aria-describedby="confirmHelp">
                        <i class="fas fa-trash-alt me-2"></i> Confirmar Eliminação
                    </button>
                    <small id="confirmHelp" class="form-text text-muted">Esta ação marcará o condomínio como excluído.</small>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}