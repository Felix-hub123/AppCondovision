@model IEnumerable<CondoVision.Models.UnitViewModel>

@{
    ViewData["Title"] = "Unidades do Condomínio " + (ViewBag.CondominiumName ?? "Selecione um Condomínio");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css" />
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Painel">Home</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Filtro de Condomínio</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-form-label">Selecione um Condomínio</label>
                                        <select asp-items="ViewBag.Condominiums" class="form-control" onchange="location.href='@Url.Action("Index", "Unit")?condominiumId=' + this.value">
                                            <option value="">-- Selecione um Condomínio --</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            @if (ViewBag.CondominiumId != null && (User.IsInRole("CompanyAdmin") || User.IsInRole("CondoManager")))
                            {
                                <div class="col-md-6 text-right">
                                    <a asp-action="Create" asp-route-condominiumId="@ViewBag.CondominiumId" class="btn btn-primary mt-2">Adicionar Nova Unidade</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (ViewBag.CondominiumId != null)
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Lista de Unidades</h3>
                        </div>
                        <div class="card-body">
                            <table id="unitsTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.UnitName)</th>
                                        <th>@Html.DisplayNameFor(model => model.Permillage)</th>
                                        <th>@Html.DisplayNameFor(model => model.OwnerFullName)</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model ?? Enumerable.Empty<CondoVision.Models.UnitViewModel>())
                                    {
                                        if (!item.WasDeleted)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.UnitName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Permillage)%</td>
                                                <td>@Html.DisplayFor(modelItem => item.OwnerFullName)</td>
                                                <td>
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body text-center">
                            <p>Por favor, selecione um condomínio para visualizar as unidades.</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#unitsTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.3/i18n/Portuguese.json"
                },
                "pageLength": 10
            });
        });
    </script>
}