@model CondoVision.Models.UnitViewModel

@{
    ViewData["Title"] = "Eliminar Unidade";
}

<h2>Eliminar Unidade</h2>

<h3>Tem certeza de que deseja eliminar esta unidade?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnitName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Permillage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Permillage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerFullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OwnerFullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CondominiumName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CondominiumName)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" asp-route-condominiumId="@Model.CondominiumId" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
